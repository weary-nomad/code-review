<h1><%= @vault.name %> Vault</h1>

<h2>Entries</h2>
<%= form_with model: [ @vault, @vault.entries.build ], local: true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :username %>
  <%= f.text_field :username %>
  
  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <%= f.label :notes %>
  <%= f.text_area :notes %>

  <%= f.submit 'Add Entry' %>
<% end %>

<ul>
  <% @entries.each do |entry| %>
    <li>
      <%= entry.title %> - <%= entry.username %>
      <%= link_to 'Edit', edit_entry_path(entry) %> |
      <%= link_to 'Delete', entry_path(entry), method: :delete %>
    </li>
  <% end %>
</ul>
